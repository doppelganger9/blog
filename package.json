{
  "name": "david-blog",
  "private": true,
  "description": "David Lacourt's personal blog, powered by SvelteKit and Markdown",
  "version": "3.0.0",
  "type": "module",
  "author": "David Lacourt <david.lacourt@gmail.com>",
  "bugs": {
    "url": "https://github.com/doppelganger9/blog/issues"
  },
  "homepage": "https://github.com/doppelganger9/blog#readme",
  "keywords": [
    "svelte",
    "sapper",
    "markdown",
    "blog",
    "javascript",
    "html",
    "css",
    "e2e",
    "jamstack"
  ],
  "license": "MIT",
  "main": "n/a",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/doppelganger9/blog.git"
  },
  "scripts": {
    "dev": "svelte-kit dev",
    "dev-with-instrumentation-for-coverage": "CYPRESS_COVERAGE=true svelte-kit dev",
    "build": "svelte-kit build",
    "preview": "svelte-kit preview",
    "serve": "npx http-server TODOOOO-quel-repertoire",
    "start": "node build",
    "cy:run": "cypress run",
    "cy:run:no-coverage": "cypress run --env coverage=false",
    "cy:open": "cypress open",
    "test": "start-server-and-test dev-with-instrumentation-for-coverage 3000 cy:run",
    "test:no-coverage": "start-server-and-test dev 3000 cy:run:no-coverage"
  },
  "devDependencies": {
    "@cypress/code-coverage": "3.9.11",
    "@sveltejs/adapter-static": "next",
    "@sveltejs/kit": "next",
    "cypress": "9.0.0",
    "elizabot": "0.0.3",
    "marked": "4.0.2",
    "rxjs": "7.4.0",
    "start-server-and-test": "1.14.0",
    "svelte": "3.44.1",
    "vite-plugin-istanbul": "2.2.2"
  },
  "nyc": {
    "cache": false,
    "all": true,
    "include": [
      "src/**/*.js",
      "src/**/*.svelte"
    ],
    "exclude": [
      "coverage/**",
      "build/**",
      "cypress/**"
    ]
  }
}
