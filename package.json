{
  "name": "david-blog",
  "private": true,
  "description": "David Lacourt's personal blog, powered by SvelteKit and Markdown",
  "version": "3.0.0",
  "type": "module",
  "author": "David Lacourt <david.lacourt@gmail.com>",
  "bugs": {
    "url": "https://github.com/doppelganger9/blog/issues"
  },
  "homepage": "https://github.com/doppelganger9/blog#readme",
  "keywords": [
    "svelte",
    "sapper",
    "markdown",
    "blog",
    "javascript",
    "html",
    "css",
    "e2e",
    "jamstack"
  ],
  "license": "MIT",
  "main": "n/a",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/doppelganger9/blog.git"
  },
  "scripts": {
    "postinstall": "npx patch-package",
    "dev": "svelte-kit dev",
    "dev-with-instrumentation-for-coverage": "CYPRESS_COVERAGE=true svelte-kit dev",
    "preview-with-instrumentation-for-coverage": "CYPRESS_COVERAGE=true svelte-kit preview",
    "build": "svelte-kit build",
    "preview": "svelte-kit preview",
    "serve": "npx http-server build",
    "start": "node build",
    "cy:run": "cypress run",
    "cy:run:no-coverage": "cypress run --env coverage=false",
    "cy:open": "cypress open",
    "test": "start-server-and-test preview-with-instrumentation-for-coverage 3000 cy:run",
    "test:no-coverage": "start-server-and-test dev 3000 cy:run:no-coverage"
  },
  "devDependencies": {
    "@akebifiky/remark-simple-plantuml": "1.0.2",
    "@cypress/code-coverage": "3.9.11",
    "@remark-embedder/core": "2.0.0",
    "@remark-embedder/transformer-oembed": "2.0.0",
    "@sveltejs/adapter-static": "1.0.0-next.26",
    "@sveltejs/kit": "1.0.0-next.240",
    "cypress": "9.3.1",
    "elizabot": "0.0.3",
    "mdsvex": "0.9.8",
    "patch-package": "6.4.7",
    "prism-svelte": "0.4.7",
    "prismjs": "1.25.0",
    "rehype-add-classes": "1.0.0",
    "rehype-autolink-headings": "6.1.1",
    "rehype-figure": "1.0.1",
    "rehype-slug": "5.0.0",
    "rehype-urls": "1.1.1",
    "remark-abbr": "1.4.1",
    "remark-twemoji": "0.1.1",
    "rxjs": "7.4.0",
    "start-server-and-test": "1.14.0",
    "svelte": "3.44.2",
    "svelte-preprocess": "4.9.8",
    "twemoji": "13.1.0",
    "unist-util-visit": "4.1.0",
    "vite-plugin-istanbul": "2.2.2"
  },
  "nyc": {
    "cache": false,
    "all": true,
    "include": [
      "src/**/*.js",
      "src/**/*.svelte"
    ],
    "exclude": [
      "coverage/**",
      "build/**",
      "cypress/**"
    ]
  }
}
